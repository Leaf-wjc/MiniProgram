page{
  background-color: #F6F6F6;
  color: #9A9A9A;
  font-size: 28rpx;
}
.head-pic{
  width: 100%;
  height: 420rpx;
}
.audio{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  margin: 160rpx 0 0 -50rpx;
  opacity: 0.7;
}
.author-info{
  padding: 20rpx 0 20rpx 34rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.author-info text{
  margin-left: 20rpx;
}
.author-avatar{
  width: 60rpx;
  height: 60rpx;
}
.author-name{
  font-size: 32rpx;
}
.article-tit{
  font-size: 32rpx;
  color: #4E505B;
  font-weight: bold;
  margin-left: 36rpx;
  letter-spacing: 4rpx;
}
.wrap{
  margin-top: 20rpx;
  width: 690rpx;
  margin: 0 auto;
  position: relative;
}
.share-contianer{
  overflow: hidden;
}
.share-contianer image{
  width: 72rpx;
  height: 72rpx;
  margin-left: 15px;
  float: right;
}
.horizon{
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: -1;
  width: 690rpx;
  height: 1px;
  background-color: #CED5E0;
}
.detail{
  letter-spacing: 2rpx;
  margin-left: 34rpx;
  color: #4E505B;
}
